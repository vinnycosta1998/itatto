generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  tatto     Tatto[]

  @@map("users")
}

model Tatto {
  id          String    @id @default(uuid())
  title       String
  description String
  genre       String
  image       String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now())
  user        User?     @relation(fields: [user_id], references: [id])
  user_id     String?

  @@map("tattos")
}
